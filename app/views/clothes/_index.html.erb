<form>
  <div class="search_field form-row">
    <%= search_form_for @q do |f| %>
      <%# <%= f.label :name_or_description_or_retailer_name_cont, 'Key Word', class: "col-1.5" %>
      <%= f.search_field :name_or_description_or_retailer_name_cont, placeholder:'キーワードやブランド名で検索', class:"form-control col-3" %>
      <%= f.label :stocks_color_eq, 'Color', class: "col-1" %>
      <%= f.select :stocks_color_eq, Stock.colors{|key,value| [Stock.colors[key],value]}, {include_blank: '指定なし'}, class:"form-control col-2" %>
      <%= f.label :stocks_size_eq, 'Size', class: "col-1" %>
      <%= f.select :stocks_size_eq, Stock.sizes{|key,value| [Stock.sizes[key],value]}, {include_blank: '指定なし'}, class:"form-control col-2" %>
      <%= f.label :price_lteq, '値段max', class: "col-1" %>
      <%= f.search_field :price_lteq, placeholder:'10000', class:"form-control col-1" %>&emsp;
      <%= f.submit '検索', class:"btn btn-outline-info" %>
    <% end %>
  </div><br>
  <%=  link_to '検索条件を解除', clothes_path, class: 'btn btn-outline-success btn-sm' %><br><br>
</form>

<div class="row">

  <div class="side_menu col-md-2 category_bar">
    <% Category.all.order("id ASC").limit(20).each do |category| %>
      <div class="btn-group-vertical dropright">
        <button type="button" class="btn btn-outline-info each_category" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= category.name %>
        </button>
        <div class="dropdown-menu">
          <% category.children.each do |child| %>
            <button class="dropdown-item" type="button"><%= link_to child.name, category_path(child.id) %></button>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-10">
    <div class="row">

      <% @clothes.each do |clothe| %>
        <div class="index_clothes col-sm-6 col-md-3">

          <div class="card">
            <%= link_to image_tag(clothe.images.first.variant(combine_options:{gravity: :center, resize:"200x300^", crop:"200x300+0+0"})),
              clothe_path(clothe.id), class:"card-img-top"  %>

            <div class="card-body">
              <p class="card-text"><%= link_to clothe.retailer.name, retailers_path(clothe.retailer.id) %><br>
                <%= link_to clothe.name, clothe_path(clothe.id) %><br>
                ¥<%= clothe.price.to_s(:delimited) %></p>
              <table>
                <tr>
                  <% if current_retailer == clothe.retailer %>
                    <td><%= link_to 'edit', edit_clothe_path(clothe.id), class: 'btn btn-outline-success btn-sm' %></td>
                    <td><%= link_to 'delete', clothe_path(clothe.id), method: :delete, data:{ confirm:'本当に削除してよろしいですか？' },
                       class: 'btn btn-outline-danger btn-sm' %></td>
                  <% end %>
                </tr>
              </table>
            </div>
          </div>

        </div>
      <% end %>

    </div>
  </div>

</div>
