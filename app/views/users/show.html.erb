<article>
  <h3>about me</h3>

  <table>
    <tr>
      <th>User name：</th>
      <td><%= @user.username %></td>
    </tr>
    <tr>
      <th>メールアドレス：</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>保有ポイント：</th>
      <td><%= @user.points %>ポイント</td>
    </tr>
  <table>
    <br><br>

    <% n = 0 %>
    <% @addresses.each do |address| %>
      <hr><h4>お届け先情報 <%= n += 1 %> </h4><hr>
      <table>
        <tr>
          <th>お名前：</th>
          <td><%= address.last_name %><%= address.first_name %></td>
        </tr>
        <tr>
          <th>郵便番号：</th>
          <td><%= address.postcode %></td>
        </tr>
        <tr>
          <th>住所：</th>
          <% pref = JpPrefecture::Prefecture.find(address.prefecture_code) %>
          <td><%= pref.name if address.prefecture_code %> <%= address.address_city %> 
            <%= address.address_street %> <%= address.address_building %></td>
        </tr>
      </table>
    <% end %>

  <br>
  <%= link_to 'Edit the profile', edit_user_registration_path %>
</article>
