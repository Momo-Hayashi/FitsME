<br>
<div class="white_box">

  <hr><h2>Sign up</h2><hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <table>
      <tr class="field" >
        <th><%= f.label :Username %></th>
        <td><%= f.text_field :username, autofocus: true, placeholder: "username" %></td>
      </tr>
      <tr class="field" >
        <th><%= f.label :email %></th>
        <td><%= f.email_field :email, autocomplete: "email", placeholder: "email@email.jp" %></td>
      </tr>
      <tr class="field" >
        <th><%= f.label :birthday, 'お誕生日' %></th>
        <td><%= f.date_select :birthday, start_year: 1940, end_year: (Time.now.year - 10), include_blank: true %></td>
      </tr>
      <tr class="field" >
        <th><%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %></th>
        <td><%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %></td>
      </tr>
      <tr class="field" >
        <td><%= f.label :password_confirmation %></td>
        <th><%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password" %></th>
      </tr>
    </table>
    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
  <% end %><br><br>

  <%= link_to '登録済みの方のログインはこちら', new_user_session_path, class:'btn btn-outline-primary btn-sm' %><br><br>

  <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class:'btn btn-outline-info btn-sm' %> |
  <%= link_to '管理者ログインはこちら', new_admin_session_path, class:'btn btn-outline-info btn-sm' %><br><br>

</div>
