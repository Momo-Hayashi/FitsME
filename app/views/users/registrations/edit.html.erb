<article>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :Username %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>


    <%= f.fields_for :addresses do |address| %>
      <hr><h5 class="shipping_address_info">お届け先お名前</h5>
      <div class="field">
        <%= address.label :姓 %>
        <%= address.text_field :last_name %>
      </div>
      <div class="field">
        <%= address.label :名 %>
        <%= address.text_field :first_name %>
      </div><hr>

      <h5 class="shipping_address_info">お届け先</h5>
      <div class="field">
        <%= address.label :postcode, '郵便番号' %>
        <%= address.text_field :postcode, id: 'user_postcode' %><br>
      </div>
      <div class="field">
        <%= address.label :prefecture_name, '都道府県' %>
        <%= address.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %><br>
      </div>
      <div class="field">
        <%= address.label :address_city, '市区町村' %>
        <%= address.text_field :address_city, id:'address_city' %><br>
      </div>
      <div class="field">
        <%= address.label :address_street, '番地' %>
        <%= address.text_field :address_street, id:'address_street' %><br>
      </div>
      <div class="field">
        <%= address.label :address_building, '建物' %>
        <%= address.text_field :address_building, id:'address_building' %><br>
      </div>
      <div class="field">
        <%= address.label :phone_number, 'お電話番号' %>
        <%= address.text_field :phone_number %><br>
      </div><hr>
    <% end %><br>

    <h5>パスワード変更時のみご入力ください</h5>
    <div class="field">
      <%= f.label :新しいパスワード %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div><hr>

    <div class="actions">
      <%= f.submit "Update" %>
    </div><br><br>
  <% end %>

  <h5>Unhappy?</h5>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

  <%= link_to "Back", :back %>
</article>
