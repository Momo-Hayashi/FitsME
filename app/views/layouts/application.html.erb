<!DOCTYPE html>
<html>
  <head>
    <title>FitsME</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class ="top_manu clearfix">
        <% if user_signed_in? %>
          <li><strong><%= link_to 'Fits ME', clothes_path %></strong></li>
          <li><%= link_to 'My page', users_show_path %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
        <% elsif retailer_signed_in? %>
          <li><strong><%= link_to 'Fits ME', clothes_path %></strong></li>
          <li><%= link_to '管理画面TOP' %></li>
          <li><%= link_to '服の登録', new_clothe_path %></li>
          <li><%= link_to 'Log out', destroy_retailer_session_path, method: :delete %></li>
        <% else %>
          <li><strong><%= link_to 'Fits ME', clothes_path %></strong></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <li><%= link_to 'Log in', new_user_session_path %></li>
          <li><%= link_to '出品企業として利用', new_retailer_registration_path %></li>
        <% end %>
      </ul>
    </header>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
