<!DOCTYPE html>
<html>
  <head>
    <title>FitsME</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-2.1.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/protonet-jquery.inview/1.1.2/jquery.inview.min.js"></script>
    <script src="https://kit.fontawesome.com/370d8f2402.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="//jpostal-1006.appspot.com/jquery.jpostal.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul class ="top_menu clearfix">
        <li><%= link_to image_tag('FitsME1.png'), clothes_path, class: 'top_logo' %></li>

        <div class="top_menu_right">
          <% if user_signed_in? %>
            <li><%= link_to users_show_path do %>
                  <i class="fas fa-user-alt"></i>My page<% end %></li>
            <li><%= link_to favorites_path do %>
                  <i class="fas fa-heart"></i>Favorites<% end %></li>
            <li><%= link_to carts_path do %>
                  <i class="fas fa-shopping-cart"></i>Cart<% end %></li>
            <li><%= link_to orders_path do %>
                  <i class="fas fa-truck"></i>Orders<% end %></li>
            <li><%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>Log out<% end %></li>

          <% elsif retailer_signed_in? %>
            <li><%= link_to retailers_path(current_retailer.id) do %>
                  <i class="fas fa-building"></i>企業ページ<% end %></li>
            <li><%= link_to new_clothe_path do %>
                  <i class="fas fa-tshirt"></i>服の登録<% end %></li>
            <li><%= link_to retailers_orders_path do %>
                  <i class="fas fa-truck"></i>注文管理<% end %></li>
            <li><%= link_to destroy_retailer_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>Log out<% end %></li>

          <% elsif admin_signed_in? %>
            <li><%= link_to rails_admin_path do %>
                  <i class="fas fa-users-cog"></i>管理画面<% end %></li>
            <li><%= link_to destroy_admin_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i>Log out<% end %></li>

          <% else %>
            <li><%= link_to new_user_registration_path do %>
                  <i class="fas fa-user-plus"></i>Sign up<% end %></li>
            <li><%= link_to new_user_session_path do %>
                  <i class="fas fa-sign-in-alt"></i>Log in<% end %></li>
            <li><%= link_to new_retailer_session_path do %>
                  <i class="fas fa-building"></i>出品企業として利用<% end %></li>
          <% end %>
        </div>
      </ul>
    </header>

    <% if notice %>
      <p class="notice alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert alert-danger"><%= alert %></p>
    <% end %>

    <article>
      <%= yield %>
    </article>

    <footer class="footer">
      <p>Copyright © 2021 FitsME All RIGHTS RESERVED.</p>
    </footer>

  </body>
</html>
